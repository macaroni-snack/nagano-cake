<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品詳細</h2>
    </div>
  </div>
</div>
<div class="container mt-5 mb-5">
  <div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto">
      <div class="embed-responsive embed-responsive-3by2 mx-auto" style="max-width: 300px;">
        <%= image_tag @item.image, class: "embed-responsive-item mx-auto" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <h4>商品名</h4><%= @item.name %>
      <h4>商品説明</h4><%= simple_format(@item.introduction)%>
      <h4>ジャンル</h4><%= @item.genre.name %>
      <h4>税込価格<br>(税抜価格)</h4><%= @item.price %>(<%= @item.with_tax_price %>)円
      <% if @item.is_active == true %>
      <h4>販売ステータス</h4>
        <p class="text-success font-weight-bold">販売中</p>
      <% else %>
        <p class="text-danger font-weight-bold">販売停止中</p>
      <% end %>
        <p><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></p>
      </div>
    </div>
  </div>
</div>