

<div class="container rounded p-3 mt-4 custom-border">

  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h2 class="text-center">商品詳細</h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-md-6 text-center">
      <%= image_tag @item.image, size: "250x150", class: "img-fluid" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h4 class="font-noto">商品名</h4>
      <p class="font-noto"><%= @item.name %></p>

      <h4>商品説明</h4>
      <p><%= simple_format(@item.introduction) %></p>

      <h4 class="font-noto">ジャンル</h4>
      <p class="font-noto"><%= @item.genre.name %></p>

      <h4 class="font-noto">税抜価格 (税込価格)</h4>
      <p class="font-noto"><%= @item.price %>円 (<%= @item.with_tax_price %>円)</p>

      <% if @item.is_active == true %>
        <h4>販売ステータス</h4>
        <p class="text-success font-weight-bold">販売中</p>
      <% else %>
        <h4>販売ステータス</h4>
        <p class="text-danger font-weight-bold">販売停止中</p>
      <% end %>

      <p><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-custom" %></p>
    </div>
  </div>

</div>

<style>
  .container {
    border: 2px solid #8B4513; /* 枠線の色をオレンジに設定 */
  }
</style>