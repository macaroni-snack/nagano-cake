<div class="container mt-5">
  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>配送先編集</h2>
    </div>
  </div>

  <!--編集エラーメッセージ-->
  <% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
    　<!--編集画面-->
      <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              郵便番号(ハイフンなし)
            </div>
            <div class="col-md-6">
              <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              住所
            </div>
            <div class="col-md-6">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              宛名
            </div>
            <div class="col-md-4">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "sample@example.com" %>
            </div>
            <div class="col-md-1">
              <%= f.submit "変更内容を保存", class:"btn btn-success my-1 mx-4 px-4" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>