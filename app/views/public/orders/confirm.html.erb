
<div class="container mt-5">
  <h4>注文情報確認</h4>
<!-- 新しいお届け先の登録フォーム -->
  <div class="mt-4">
    <div class="row">
      <div class="col-md-2">
       <h5>支払方法</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @payment_method %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-4">
    <div class="row">
      <div class="col-md-2">
       <h5>お届け先</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @address %>
        </div>
      </div>
    </div>
  </div>
  
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-success" onclick="redirectToComplete()">注文確定</button>
</div>


<script>
    function redirectToComplete() {
        window.location.href = '/orders/complete';
    }
</script>