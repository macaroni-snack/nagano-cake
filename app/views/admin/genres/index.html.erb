<%= flash[:notice] %>
<div class="container">

  <h2>ジャンル一覧・追加</h2>

  <div class="row">
    <h6>ジャンル名</h6>
    <%= form_with model: @genre, url: admin_genres_path,method: :post do |f| %>

      <%= f.text_field :name,placeholder: "ジャンル名" %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>
  </div>

    <table>
      <tr>
        <th colspan="2"><h2>ジャンル</h2></th>
      </tr>

        <% @genres.each do |genre| %>
          <tr><td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td></tr>
        <% end %>
      </th>
    </table>

</div>




