
<div class="container mt-5">
  <h4>注文情報確認</h4>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active" style="width:28%">商品名</th>
            <th class="table-active" style="width:18%">単価(税込)</th>
            <th class="table-active" style="width:18%">数量</th>
            <th class="table-active" style="width:18%">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.image, size: "50x30" %>
              　　　<%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered">
        <tr><th class="table-active" style="width:50%">送料</th><td>800</td></tr>
        <tr><th class="table-active" style="width:50%">商品合計</th><td><%= @total_amount.to_s %></td></tr>
        <tr><th class="table-active" style="width:50%">請求合計</th><td><%= @total_amount + 800 %></td></tr>
      </table>
    </div>
  </div>
<!-- 新しいお届け先の登録フォーム -->
  <div class="mt-4">
    <div class="row">
      <div class="col-md-2">
       <h5>支払方法</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @payment_method %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="row">
      <div class="col-md-2">
       <h5>お届け先</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @address %>
        </div>
      </div>
    </div>
  </div>
</div>


  <div class="d-flex justify-content-center mt-4">
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :post_code, :value => @order.post_code %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :name , :value => @order.name %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :customer_id, :value => @order.customer_id %>
    <%= f.hidden_field :total_payment, value: @total_amount + 800 %>
    <%= f.hidden_field :status, :value => @order.status %>
    <%= f.submit "注文確定", class: "btn btn-success" %>
  <% end %>
</div>
