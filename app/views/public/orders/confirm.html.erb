
<div class="container mt-5">
  <h4>注文情報確認</h4>
  
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active" style="width:28%">商品名</th>
            <th class="table-active" style="width:18%">単価(税込)</th>
            <th class="table-active" style="width:18%">数量</th>
            <th class="table-active" style="width:18%">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.image, size: "50x30" %>
              　　　<%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered">
        <tr><th class="table-active" style="width:50%">送料</th><td>800</td></tr>
        <tr><th class="table-active" style="width:50%">商品合計</th><td><%= @total_amount.to_s %></td></tr>
        <tr><th class="table-active" style="width:50%">請求合計</th><td><%= @total_amount + 800 %></td></tr>
      </table>
    </div>
  </div>
  
<!-- 新しいお届け先の登録フォーム -->
  <div class="mt-5">
    <div class="row">
      <div class="col-md-2">
       <h5>支払方法</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @payment_method %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-4">
    <div class="row">
      <div class="col-md-2">
       <h5>お届け先</h5>
      </div>
      <div class="col-md-3">
        <div>
          <%= @address %>
        </div>
      </div>
    </div>
  </div>
  
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-success" onclick="redirectToComplete()">注文確定</button>
</div>
</div>


<script>
    function redirectToComplete() {
        window.location.href = '/orders/complete';
    }
</script>