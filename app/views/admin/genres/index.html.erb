<div class="container">
 <h2>ジャンル一覧・追加</h2>
    <div class="row mt-5">
      <%= form_with model: @genre, url: admin_genres_path,method: :post do |f| %>
      <span>ジャンル名</span>
      <%= f.text_field :name,placeholder: "ジャンル名" %>
      <%= f.submit '新規登録', class: "btn btn-success", style: "border-radius: 8px;" %>
      <% end %>
    </div>

    <div class="col-md-3 mt-5">
      <table class= "table">
        <thead>
          <tr>
            <th colspan="2">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="pt-3"><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success", style: "border-radius: 6px;" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>