<div class="container">

  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧(全<%= @items.count %>件)</h2>
    </div>
  </div>

  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">


      <%= link_to item_path(item) do %>
        <p>商品写真</p>
      <% end %>

      <p><%= item.name %></p>

      <% if item.is_active == true %>
        <p>¥<%= item.price %></p>
      <% else %>
        <p>完売中</p>
      <% end %>
    <% end %>
    </div>
  </div>
  
</div>