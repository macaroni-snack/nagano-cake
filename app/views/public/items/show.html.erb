<div class="container mt-5 mb-5">
  <div class="row text-center text-xs-center text-sm-left text-md-left ">

    <div class="col-xs-12 col-sm-12 col-md-6 mx-auto text-right">
      <p>商品写真</p>
      <%= image_tag @item.image, size: "200x200" %>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 item-details mx-auto">
      <h2><%= @item.name %></h2>
      <h4><%= @item.introduction %></h4>
      <%  if @item.is_active == true %>
        <p class="text-success">販売中</p>
        <h3>¥<%= @item.price %> (税込)</h3>
      <% else %>
        <h3 class="text-danger">完売中</h3>
      <% end %>
    </div>

  </div>
</div>