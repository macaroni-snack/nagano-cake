<h1>注文履歴</h1>

<table>
  <thead>
    <tr>
      <th>注文番号</th>
      <th>商品名</th>
      <th>数量</th>
      <th>価格</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <% order.order_details.each do |detail| %>
            <%= detail.item.name %><br>
          <% end %>
        </td>
        <td>
          <% order.order_details.each do |detail| %>
            <%= detail.quantity %><br>
          <% end %>
        </td>
        <td>
          <% order.order_details.each do |detail| %>
            <%= detail.price %><br>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>