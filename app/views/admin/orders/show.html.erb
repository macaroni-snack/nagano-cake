<div class="container mt-5">
  <h1><%= @customer.family_name %><%= @customer.first_name %>の注文履歴</h1>

  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>