<h1>ジャンル一覧・追加</h1>

<%= flash[:notice] %>
<h4>ジャンル名</h4>
<%= form_with model: @genre, url: admin_genres_path,method: :post do |f| %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>


<h1>ジャンル</h1>
<% @genres.each do |genre| %>
  <span><%= genre.name %></span>
  <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
<% end %>





