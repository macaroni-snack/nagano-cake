<div class="container">
  <h2>配送先編集</h2>
  <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
    <div class="address">
        <%= f.label :郵便番号 %>
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>

    <div class="address">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="address">
      <%= f.label :宛名 %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.submit "変更内容を保存", class:"btn btn-primary" %>
    </div>
  <% end %>

</div>