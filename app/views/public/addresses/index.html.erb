<div class="container mt-5">

  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <!--autofocus: true➝データ記憶して、入力状態にする-->
        <!--autocomplete➝入力済みの文字列を元に候補のメニューを表示して入力を補完-->
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              郵便番号(ハイフンなし)
            </div>
            <div class="col-md-6">
              <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              住所
            </div>
            <div class="col-md-6">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              宛名
            </div>
            <div class="col-md-6">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-5 col-8">
      <table  class="table table-hover table-bordered ">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-primary" %>
              <%= link_to "削除する", address_path(address), method: :delete , class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>

</div>