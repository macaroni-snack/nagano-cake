<%= flash[:notice] %>
<h2>ジャンル編集</h2>
<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <span>
        <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
          <p>ジャンル名</p>
           <%= f.text_field :name %>
           <%= f.submit '変更を保存', class: "btn btn-success" %>
        <% end %>
      </span>
    </div>
  </div>
</div>