<h1>会員情報編集</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= form_with model: @customer, url: customer_path(current_customer), method: :patch do |form| %>



        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              氏名
            </div>

            <div>
              <%= form.text_field :family_name, class: "form-control" %>
            </div>


            <div>
              <%= form.text_field :first_name , class: "form-control" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            　フリガナ
            </div>

            <div>
              <%= form.text_field :family_name_kana, class: "form-control" %>
            </div>


            <div>
              <%= form.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            　郵便番号
            </div>
            <div class="col-md-1">
            </div>
            <div>
              <%= form.text_field :post_code, class: "form-control" %>
            </div>
          </div>
        </div>


         <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            　住所
            </div>
            <div class="col-md-1">
            </div>
            <div>
              <%= form.text_field :address, class: "form-control" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
              電話番号
            </div>
            <div class="col-md-1">
            </div>
            <div>
              <%= form.text_field :telephone_number, class: "form-control" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            　メールアドレス
            </div>
            <div class="col-md-1">
            </div>
            <div>
              <%= form.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            </div>
            <div class="col-md-1">
            </div>
            <div class="form-group text-center">
              <%= form.submit '変更内容を保存', class: "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-3 mt-2">
            </div>
            <div class="col-md-1">
            </div>
            <div class="form-group text-center">
              <%= link_to '退会する', customers_confirm_withdrawal_path, class: "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>


      <% end %>
    </div>
  </div>
</div>

