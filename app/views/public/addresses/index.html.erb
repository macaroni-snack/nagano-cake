<div class="container">

  <h2>配送先登録/一覧</h2>

  <div class="row">
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>

      <!--autofocus: true➝データ記憶して、入力状態にする-->
      <!--autocomplete➝入力済みの文字列を元に候補のメニューを表示して入力を補完-->

      <div class="col-xs-1">
        <!--()使ったらシンタックスエラーになる-->
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
      </div>

      <div class="col-xs-1">
        <%= f.label :住所 %>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40" %>
      </div>

      <div class="col-xs-1">
        <%= f.label :宛名 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="col-xs-1">
        <%= f.submit "新規登録", class:"btn btn-primary" %>
      </div>

    <% end %>
  </div>

  <table  class="table">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address), class: "btn btn-primary" %>
          <%= link_to "削除する", address_path(address), method: :delete , class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>

</div>