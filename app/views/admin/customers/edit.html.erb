<div class="container">

  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.family_name %> <%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
    <div class="row">

      <div class="form-group">
　　    <h1>会員ID</h1>
　　　    <%= @customer.id %>
　　　</div>

　　　<div class="form-group">
　　    <h1>氏名</h1>
　　      <%= f.text_field :family_name %>
　　      <%= f.text_field :first_name %>
　　  </duv>

　　  <div class="form-group">
    　   <h1>フリガナ</h1>
    　　    <%= f.text_field :family_name_kana %>
    　　    <%= f.text_field :first_name_kana %>
    　</div>

    　<div class="form-group">
  　     <h1>郵便番号</h1>
    　　    <%= f.text_field :post_code %>
    　</div>

    　<div class="form-group">
    　   <h1>住所</h1>
    　　    <%= f.text_field :address %>
    　</div>

    　<div class="form-group">
    　   <h1>電話番号</h1>
    　　    <%= f.text_field :telephone_number %>
    　</div>

    　<div class="form-group">
    　   <h1>メールアドレス</h1>
    　　    <%= f.text_field :email %>
    　</div>

    　<div class="form-group">
    　  <h1>会員ステータス</h1>
    　    <%= f.radio_button :is_deleted, false, checked: @customer.is_deleted == false, class: 'custom-control-input', id: 'status-active' %>
         <%= f.label :is_deleted, '有効', class: 'custom-control-label', for: 'status-active' %>
      </div>

      <div class="row mb-2">
        <div class="col-lg-6 px-sm-0 offset-sm-1">
    　     <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
  <% end %>
</div>