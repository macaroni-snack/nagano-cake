
<div class="container">

  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table">
        <tr>
          <th class="table-active">氏名</th>
          <td><%= @customer.family_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">フリガナ</th>
          <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-6 px-sm-0 offset-sm-1">
      <h4>配送先</h4>
      <%= link_to '一覧を見る', addresses_path, class:"btn btn-success my-1 mx-4 px-4" %>
      <h4>注文履歴</h4>
      <%= link_to '一覧を見る', orders_path, class:"btn btn-primary mx-4 px-4" %>
    </div>
  </div>

</div>