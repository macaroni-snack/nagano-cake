<div class="container">
  <h2 class="text-left">新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <h2 class="h3 mb-3 font-weight-normal">会員の方はこちらからログイン</h2>

  <div class="form-group">
    <div class="row">
      <div class="col-md-3 mt-2">
      　メールアドレス
      </div>
      <div class="col-md-6">
        <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
      </div>
    </div>
  </div>
        
  <div class="form-group">
    <div class="row">
      <div class="col-md-3 mt-2">
      　パスワード
      </div>
      <div class="col-md-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="row">
      <div class="col-md-3 mt-2">
      </div>
      <div class="col-md-3 mt-5">
         <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  </div>

<% end %>
  <div class="text-center mt-3">
    <h5 class="text-left">会員登録がまだの方</h5>
    <div class="col-md-5 mt-5">
    <%= link_to 'こちら', new_customer_registration_path, class: 'btn btn-link' %>から新規登録を行ってください。
    </div>
  </div>

</div>


